<button class="btn @(Type == ButtonType.Outline ? $"{Type}-{Appearance}" : $"{Type} btn-{Appearance}") @($"btn-{Size}") @CssClass @(Shadown ? "shadow-sm" : "")"
        disabled="@IsDisable"
        @onclick:stopPropagation="true"
        @onclick:preventDefault="true"
        @attributes="InputAttributes">
    @ChildContent
</button>